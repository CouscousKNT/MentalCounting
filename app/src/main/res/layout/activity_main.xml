<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:layout_gravity="center"
        android:layout_centerVertical="false"
        android:layout_centerInParent="false" android:layout_centerHorizontal="false">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp" android:visibility="visible" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="230dp">
        <Button
                android:text="@string/button_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button_play"
                android:textAllCaps="false"
                android:layout_gravity="center" android:gravity="center_horizontal|center_vertical"
        />
        <Button
                android:text="Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button_score"
                android:textAllCaps="false"
                android:layout_gravity="center_horizontal"
        />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>